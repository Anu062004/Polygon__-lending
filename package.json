{
  "name": "polygon-debpol-lending-protocol",
  "version": "1.0.0",
  "description": "Unified Polygon Lending Protocol enhanced with Debpol Protocol features (governance, rewards, flash loans, oracle aggregation)",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:amoy": "hardhat run scripts/deploy/polygonAmoy/deploy.js --network polygonAmoy",
    "deploy:local": "hardhat run scripts/deploy/local/deploy.js --network localhost",
    "deploy:hardhat": "hardhat run scripts/deploy/local/deploy.js --network hardhat",
    "deploy:production": "powershell -ExecutionPolicy Bypass -File scripts/deploy-production.ps1",
    "deploy:production:unix": "bash scripts/deploy-production.sh",
    "sync:addresses": "node scripts/sync-addresses.js",
    "oracle:start": "node updatePrices.js",
    "demo": "bash demo.sh",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "verify:amoy": "hardhat verify --network polygonAmoy",
    "gas:report": "REPORT_GAS=true hardhat test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "k8s:deploy": "kubectl apply -f kubernetes/",
    "k8s:delete": "kubectl delete -f kubernetes/",
    "security:audit": "npm audit && npx slither .",
    "performance:test": "npm run test && npm run test:coverage",
    "production:health": "curl -f http://localhost:3000 && curl -f http://localhost:9090 && curl -f http://localhost:3001"
  },
  "keywords": [
    "defi",
    "lending",
    "aave",
    "polygon",
    "ethereum",
    "solidity"
  ],
  "author": "Lending Protocol Team",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "ethers": "^6.8.0"
  }
}
